{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./js",
        "module": "es6",
        "moduleResolution": "Node",
        "target": "es2019",
        "strict": true,
    "strictNullChecks": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "allowSyntheticDefaultImports": true
    },
    "include": [
    "src/ts/**/*",
    "shared/**/*",
    "src/node_modules/**/*"
    ]
}